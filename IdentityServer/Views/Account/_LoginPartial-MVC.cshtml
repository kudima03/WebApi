@model IdentityServer.ViewModels.LoginViewModel

<div class="container account-login-container">
    <div class="row">
        <div class="col-md-12">
            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <h4>Sign in</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label form-label"></label>
                        <input asp-for="Email" class="form-control form-input form-input-center" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label form-label"></label>
                        <input asp-for="Password" class="form-control form-input form-input-center" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group buttons">
                        <button type="submit" class="btn btn-default btn-brand btn-brand-big">&nbsp;Log in&nbsp;</button>
                        <button asp-controller="Account" asp-action="Register">&nbsp;Register&nbsp;</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
<style>
    * {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        box-sizing: border-box;
    }

    ul {
        list-style-type: none;
    }
    .account-login-container {
        width: 100%;
    }

    .row {
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    h4 {
        font-size: 25px;
    }

    .form-group {
        margin: 15px 0;
    }

        .form-group label {
            display: block;
            min-width: 150px;
            margin-right: 10px;
            font-size: 13px;
            margin-bottom: 10px;
        }

    input {
        padding: 10px 20px;
        border: 1px solid #000;
        outline: none;
    }

    button {
        padding: 10px 15px;
        cursor: pointer;
        color: #000;
        font-size: 15px;
        background-color: #fff;
        border-radius: 5px;
        transition: .2s all ease-in-out;
    }

        button:hover {
            background-color: #000;
            color: #fff;
        }

    .buttons {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }
</style>
